<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kh.myapplication.View.Main2Activity">
    <include layout="@layout/toolbar" android:id="@id/toolbar_Main"
   ></include>
<com.example.kh.myapplication.View.Custom_View
    android:id="@+id/custom_View"
    android:layout_width="match_parent"
    android:layout_below="@id/toolbar_Main"
    android:layout_height="350dp"
  />
    <Button
        android:id="@+id/btn"
        android:layout_below="@+id/custom_View"
        android:text="Swap Color"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
</RelativeLayout>
